<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2><i class="fa fa-files-o"></i><span class="break"></span>Edit gem information</h2>
    </div>
    <div class="panel-body">

      <%= form_for @jem do |f| %>

        <div class="form-group">
          <%= f.label :author, 'Author' %></br>
          <%= f.text_field :author, class: "form-control"  %></br>
        </div>

        <div class="form-group">
          <%= f.label :description, 'Description' %></br>
          <%= f.text_field :description, class: "form-control"  %></br>
        </div>

        <div class="form-group">
          <%= f.label :summary, 'Gem Summary' %></br>
          <%= f.text_field :summary, class: "form-control"  %></br>
        </div>

        <div class="form-group">
          <%= f.label :homepage, 'Homepage' %></br>
          <%= f.text_field :homepage, class: "form-control"  %></br>
        </div>

        <div class="form-group">
          <%= f.label :email, 'Email Address' %></br>
          <%= f.text_field :email, class: "form-control"  %></br>
        </div>

        <div class="form-group">
          <%= f.label :github, 'Github Repository' %></br>
          <%= f.text_field :github, class: "form-control"  %></br>
        </div>

        <div class="form-group">
          <%= f.submit 'Update Gem', :class => 'btn btn-primary full-width-button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>